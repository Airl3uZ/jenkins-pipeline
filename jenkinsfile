@Library('SharedLibrary') _
pipeline {
    agent any
    stages {
        stage('Get Configuration') {
            steps {
                githubCheckout(
                    branch: 'origin/citest',
                    repo: 'demo-php-ci.git',
                    extensions: [[$class: 'SparseCheckoutPaths', sparseCheckoutPaths: [[path: 'ci']],          [$class: 'RelativeTargetDirectory', relativeTargetDir: 'ci' ]]],
                    user: 'Airl3uZ',
                )
                script {
                    config = readYaml file: "ci/ciconfig.yml"
                    println config
                    project = config.project
                }
            }
        }
        stage("CheckoutCode") {
            when {
                expression {"${project.scm}" == 'github'}
            }
            steps {
                githubCheckout(
                    branch: "${project.branch}",
                    repo: "${project.repo}",
                    user: "${project.user}",
                    extensions: [[$class: 'RelativeTargetDirectory', relativeTargetDir: "${project.localPath}" ]]
                )
            }
        }
        stage("Test") {
            steps {
                script {
                    for(String testStep: project.testStep) {
                        println testStep
                    }
                }
            }
        }
    }
}